{
  "manifest_version": 3,
  "name": "Link Downloader",
  "version": "1.0",
  "description": "Captures and downloads PDF links with a delay.",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "background"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}